{
    "name": "marbles/craft-colour-swatches",
    "description": "Let clients choose from a predefined set of colours.",
    "type": "craft-plugin",
    "keywords": [
        "craft",
        "cms",
        "craftcms",
        "craft-plugin",
        "colour-swatches"
    ],
    "support": {
        "docs": "https://github.com/Marbles/craft-colour-swatches/blob/master/README.md",
        "issues": "https://github.com/Marbles/craft-colour-swatches/issues"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Marbles",
            "homepage": "https://www.marbles.be"
        }
    ],
    "require": {
        "craftcms/cms": "^3.0.0"
    },
    "autoload": {
        "psr-4": {
          "marbles\\colourswatches\\": "src/"
        }
    },
    "extra": {
        "name": "Craft Colour Swatches",
        "handle": "colourswatches",
        "schemaVersion": "1.0.0",
        "hasCpSettings": false,
        "hasCpSection": false,
        "changelogUrl": "https://raw.githubusercontent.com/Marbles/craft-colour-swatches/master/CHANGELOG.md",
        "class": "marbles\\colourswatches\\ColourSwatches"
    }
}
